{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"outDir": "./views/js",
		"rootDir": "./views/ts",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmitOnError": true,
		"sourceMap": true,
		"declaration": false
	},
	"include": [
		"./views/ts/**/*"
	],
	"exclude": [
		"node_modules"
		// "views"
	]
}
